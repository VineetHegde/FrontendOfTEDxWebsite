# Create comprehensive .gitignore
cat > .gitignore << 'EOF'
# Dependencies
node_modules/

# Build outputs
dist/
.parcel-cache/

# Logs
*.log
npm-debug.log*
firebase-debug.log

# Memory dumps
heap-*.heapsnapshot

# Environment files
.env
.env.local
.env.production

# OS generated files
.DS_Store
Thumbs.db

# Editor directories
.vscode/
.idea/
EOF
